@model Krompaco.RecordCollector.Content.Models.SinglePage

@if (Model.Categories != null && Model.Categories.Count > 0)
{
	<div class="mt-6 flex flex-row space-x-2">
		@foreach (var category in Model.Categories)
		{
			<span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium leading-5 bg-gray-100 text-gray-800">
				@category
			</span>
		}
	</div>
}

@if (Model.Date != DateTime.MinValue)
{
	var authorImage = Model.CustomStringProperties["authorimage"];
	var author = Model.CustomStringProperties["authorname"] ?? string.Empty;
	var hasAuthorImage = !string.IsNullOrWhiteSpace(authorImage);
	var hasAuthor = !string.IsNullOrWhiteSpace(author);

	<div class="mt-6 flex items-center">
		@if (hasAuthorImage)
		{
			<div class="flex-shrink-0">
				<img class="h-10 w-10 rounded-full" width="40" height="40" src="@authorImage" alt="@author" />
			</div>
		}
		
		<div class="ml-3">
			<p class="text-sm leading-5 font-medium text-gray-900">
				@author
			</p>
			<div class="text-sm leading-5 text-gray-700">
				@if (Model.Date != DateTime.MinValue)
				{
					<time datetime="@Model.Date.ToString("yyyy-MM-dd")">
						@Model.Date.ToShortDateString()
					</time>
				}
			</div>
		</div>
	</div>
}
